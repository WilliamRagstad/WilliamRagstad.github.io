{
	"workbench.colorCustomizations": {
		"activityBar.background": "#333018",
		"titleBar.activeBackground": "#4e4424",
		"titleBar.activeForeground": "#f3f182",
		"tab.activeBorder": "#4e4424",
		"statusBar.background": "#4e4424",
		"statusBar.foreground": "#ffffff"
	},
	"colorTabs.config": [
		{
			"regex": ".*/posts/.*",
			"color": "#4e4424"
		},
		{
			"regex": ".*/bookshelf/.*",
			"color": "#473eb2"
		},
		{
			"regex": ".*/projects/.*",
			"color": "#c75222"
		}
	],
	"grammarly.selectors": [
		{
			"language": "markdown",
			"scheme": "file"
		}
	],
	"grammarly.files.include": [
		"**/*.md",
		"**/*.txt",
		"**/*.html",
		"**/*.htm",
		"**/*.tex",
	]
}
